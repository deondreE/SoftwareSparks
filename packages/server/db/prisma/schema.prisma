generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Role {
  id     Int     @id @default(autoincrement())
  name   String?
  color  String
  userId Int     @unique
  User   User    @relation(fields: [userId], references: [id])
}

model User {
  id    Int     @id @default(autoincrement())
  email String
  name  String?
  Role  Role?
}

model File {
  id   Int    @id @default(autoincrement())
  name String
  path String
  Dir  Dir?
}

model Dir {
  id    Int    @id @default(autoincrement())
  name  String
  path  String
  Files File   @relation(fields: [id], references: [id])
}
